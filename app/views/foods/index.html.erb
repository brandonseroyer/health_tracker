<%= form_tag foods_path, :method => 'get', :id => "search", remote: true do %>
<p>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search", :name => nil %>
</p>
<% end %>

<div id="food-list">
  <%= render 'foods_list', foods: @foods %>
</div>

<br>

<%= form_for (Food.new) do |f| %>
  <div class='form-group'>
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control", required: 'required' %>
    <%= f.label :calories %>
    <%= f.text_field :calories, class: "form-control", required: 'required' %>
    <%= f.hidden_field :user_id, value: current_user.id %>
  </div>
  <div class='form-group'>
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>

<p><b>Calories Consumed:</b> <%= @foods.calorie_total %></p>

<div>
  <table border="1" style="width:25%">
    <caption>Exercise</caption>
    <tr>
      <th><center>Activity</center></th>
      <th><center>Calories</center></th>
    </tr>

    <% @exercises.each do |exercise| %>
    <tr>
      <td><center>
      <%= exercise.activity %>
      <%= link_to 'Edit', edit_exercise_path(exercise) %>
      <%= link_to "Delete", exercise_path(exercise),
      :data => {:confirm => "Are you sure?",
        :method => "delete"} %>
      </center></td>
      <td><center><%= exercise.calories %></center></td>
    </tr>
    <% end %>
  </table>
  <br>
  <%= form_for (Exercise.new) do |f| %>

  <div class='form-group'>
    <%= f.label :activity %>
    <%= f.text_field :activity, class: "form-control", required: 'required' %>
    <%= f.label :calories %>
    <%= f.text_field :calories, class: "form-control", required: 'required' %>
    <%= f.hidden_field :user_id, value: current_user.id %>

  </div>

  <div class='form-group'>
    <%= f.submit class: 'btn btn-success' %>
  </div>
  <% end %>

  <p><b>Calories Burned:</b> <%= @exercises.calorie_total %></p>
