<div>
  <table border="1" style="width:25%">
    <caption>Food</caption>
    <tr>
      <th><center>Name</center></th>
      <th><center>Calories</center></th>
    </tr>

    <% @foods.each do |food| %>
    <tr>
      <td><center><%= food.name %></center></td>
      <td><center><%= food.calories %></center></td>
    </tr>
    <% end %>
  </table>
  <br>

  <%= form_for (Food.new) do |f| %>


  <div class='form-group'>
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control", required: 'required' %>
    <%= f.label :calories %>
    <%= f.text_field :calories, class: "form-control", required: 'required' %>
    <%= f.hidden_field :user_id, value: current_user.id %>

  </div>

  <div class='form-group'>
    <%= f.submit class: 'btn btn-success' %>
  </div>
  <% end %>

  <p><b>Calories Consumed:</b> <%= @foods.calorie_total %></p>
</div>

