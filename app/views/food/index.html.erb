<% title "Food" %>

<table class="pretty">
  <tr>
    <th><%= sortable "name" %></th>
    <th><%= sortable "calories" %></th>
  </tr>
  <% for food in @Foods %>
  <tr>
    <td><%= food.name %></td>
    <td><%= food.calories %></td>
  </tr>
  <% end %>
</table>

<p><%= link_to "New Food", new_food_path %></p>

