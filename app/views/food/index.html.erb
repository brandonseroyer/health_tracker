    <th><%= sortable "activity" %></th>
    <th><%= sortable "calories" %></th>
  </tr>
  <% for exercise in @Exercises %>
  <tr>
    <td><%= exercise.activity %></td>
    <td><%= exercise.calories %></td>
  </tr>
  <% end %>
</table>

<p><%= link_to "New Exercise", new_exercise_path %></p>
